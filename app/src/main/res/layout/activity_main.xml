<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramzanullah.firebaseregistrationlogin.MainActivity">


    <Button
        android:id="@+id/id_btnRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnRegistration"
        android:text="Registration"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="98dp"
        android:layout_marginTop="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/id_btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnLogin"
        android:text="Login"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="167dp"
        android:layout_below="@+id/id_btnRegistration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />



</RelativeLayout>
