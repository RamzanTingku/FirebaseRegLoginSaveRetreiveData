<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramzanullah.firebaseregistrationlogin.RegistraionActivity">


    <EditText
        android:id="@+id/email_registration"
        android:hint="Enter Your Email"
        android:textSize="20sp"
        android:textStyle="normal"

        android:layout_width="368dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="28dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password_registration"
        android:hint="Password"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"


        tools:layout_editor_absoluteY="108dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/email_registration"
        android:layout_alignStart="@+id/email_registration" />

        \android:layout_alignStart="@+id/email_registration" />

    <Button
        android:id="@+id/id_btnRegistrationUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textStyle="bold"
        android:onClick="btnRegistrationUser"
        tools:layout_editor_absoluteX="229dp"
        tools:layout_editor_absoluteY="191dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/password_registration" />





</RelativeLayout>
